{
    "env": {
      "es6": true,
      "node": true
    },
    "extends": ["eslint:recommended", "plugin:node/recommended", "prettier"],
    "parserOptions": {
      "ecmaVersion": 2022 
    },
    "rules": {
      "semi": ["error", "always"], // Enforce the use of semicolons always
      "arrow-body-style": ["error", "always"], // Enforce using braces for arrow function bodies
      "no-console": ["error", { "allow": ["warn", "error"] }], // Allow only console.warn and console.error
      "no-restricted-syntax": [
        "error",
        "FunctionExpression",
        "FunctionDeclaration"
      ] // Restrict the use of specific syntax forms
    },
    "plugins": ["prettier"]
}